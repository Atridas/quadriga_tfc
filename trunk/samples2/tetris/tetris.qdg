        }
        if(py[i] < 0) {
          ++py[0];++py[1];++py[2];++py[3];
          stop = false;
          break;
        }
        if(py[i] >= 18) {
          --py[0];--py[1];--py[2];--py[3];
          stop = false;
          break;
        }
        
        if(entitat[CPeça].taulell[Taulell].taulell[px[i]][py[i]] != 0) {
          for(int j = 0; j < 4; ++j) {
            if(py[j] == 17) {
              boolean gotoLeft = true;
              for(int k = 0; k < 4; ++k) {
                if(px[k] == 0) {
                  gotoLeft = false;
                  ++px[0];++px[1];++px[2];++px[3];
                  break;
                }
              }
              if(gotoLeft) {
                --px[0];--px[1];--px[2];--px[3];
              }
              --py[0];--py[1];--py[2];--py[3];
            }
          }
          ++py[0];++py[1];++py[2];++py[3];
