    Vector3f pos;
  
    pos = entitat["cub1"][Transform].position;
    pos.x = px[0] * 2.f;
    pos.z = py[0] * 2.f;
    entitat["cub1"][Transform].position = pos;
    
    pos = entitat["cub2"][Transform].position;
    pos.x = px[1] * 2.f;
    pos.z = py[1] * 2.f;
    entitat["cub2"][Transform].position = pos;
    
    pos = entitat["cub3"][Transform].position;
    pos.x = px[2] * 2.f;
